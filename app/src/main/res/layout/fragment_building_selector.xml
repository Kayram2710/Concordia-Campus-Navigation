<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/burgundy"

    android:layout_marginTop="450dp"
    android:alpha="0.95"
    android:id="@+id/buildingSelectorRoot">

    <!-- Search Bar Container -->
    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp"
        android:elevation="8dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="26dp">

        <!-- EditText for Search -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search campus facility..."
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@android:color/transparent"
            android:padding="4dp" />

        <!-- Optional: Search Icon -->
        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Search icon"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- fragment_building_selector.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.95"
        android:background="@color/burgundy"
        android:orientation="vertical"> <!-- optional slight transparency -->

        <ScrollView
            android:id="@+id/buildingScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:padding="16dp"
            android:scrollbarThumbVertical="@drawable/my_scrollbar_thumb"
            android:scrollbars="vertical">

            <!-- Your existing building selector UI (SGW/Loyola lists, etc.) -->
            <!-- Exactly as you had it, but wrapped in a ScrollView -->

        </ScrollView>
    </LinearLayout>


    <!-- 1st Yellow line (below search bar) -->
    <View
        android:id="@+id/line_searchbar_sgw"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar_container" />

    <!-- ScrollView for SGW + Loyola sections -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_searchbar_sgw"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:padding="16dp">

        <!-- Main vertical container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SGW Title -->
            <TextView
                android:id="@+id/tv_sgw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SGW Buildings:"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- SGW Buildings in two columns -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Column 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- LS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LS - Learning Square"
                            android:textColor="@color/black"
                            android:gravity="start" />
                    </LinearLayout>

                    <!-- EV -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EV - Engineering, Computer Science &amp; Visual Arts Integrated Complex"
                            android:textColor="@color/black"
                            android:gravity="start" />
                    </LinearLayout>

                    <!-- GM -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GM - Guy Metro Building"
                            android:textColor="@color/black"
                            android:gravity="start" />
                    </LinearLayout>

                    <!-- GN -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GN - Grey Nuns Building"
                            android:textColor="@color/black"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Column 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="8dp">

                    <!-- HB -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HB - Henry F. Hall Building"
                            android:textColor="@color/black"
                            android:gravity="start" />
                    </LinearLayout>

                    <!-- LB -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LB - J.W. McConnell Building"
                            android:textColor="@color/black"
                            android:gravity="start" />
                    </LinearLayout>

                    <!-- MB -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MB - John Molson Building"
                            android:textColor="@color/black"
                            android:gravity="start" />
                    </LinearLayout>

                    <!-- FB -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FB - Faubourg Building"
                            android:textColor="@color/black"
                            android:gravity="start" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 2nd Yellow line (between SGW and Loyola) -->
            <View
                android:id="@+id/line_sgw_loyola"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:background="@color/yellow" />

            <!-- Loyola Title -->
            <TextView
                android:id="@+id/tv_loyola_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loyola Buildings:"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Loyola Buildings in two columns -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Column 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- AD -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AD - Administration Building"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- CJ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CJ - Communication Studies &amp; Journalism Building"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Column 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="8dp">

                    <!-- HA -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HA - Hingston Hall Annex"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- HB -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:background="@drawable/my_shadow_box"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HB - Hingston Hall Building"
                            android:textColor="@color/black"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
